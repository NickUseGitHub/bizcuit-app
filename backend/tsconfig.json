{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "incremental": true,
    "paths": {
      "~auth/*": [
        "./src/auth/*",
      ],
      "~config/*": [
        "./src/config/*",
      ],
      "~beer/*": [
        "./src/beer/*",
      ],
      "~user/*": [
        "./src/user/*",
      ],
      "~vine/*": [
        "./src/vine/*",
      ]
    }
  }
}